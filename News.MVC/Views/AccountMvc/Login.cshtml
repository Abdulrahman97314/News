@model LoginDto

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Login</h2>
            <form asp-controller="AccountMvc" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.Email" required>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4">Sign in</button>
            </form>
        </div>
    </div>
</div>