
@{
    ViewData["Title"] = "Details";
    Layout = "~/views/shared/adminpanal.cshtml";

}

@model News.Dtos.NewsDto

<div class="container text-center">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card my-5">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.NewsContent</p>
                    @if (Model.ImageUrl != null)
                    {
                        <img src="@Model.ImageUrl" class="img-fluid" alt="News Image">
                    }
                    <div class="text-muted mt-3">
                        <small>Published by @Model.Author.Name on @Model.PublicationDate.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>